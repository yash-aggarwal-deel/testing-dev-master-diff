{
  "name": "<application_name>",
  "version": "0.0.1",
  "description": "<application description>",
  "private": true,
  "author": "<application team>",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "rm -rf dist && nest build",
    "format": "prettier --write \"{src,tests,types,migrations,post_deployment_migrations}/**/*.{ts,js,json,yaml}\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:http-build": "node dist/src/main",
    "start-consumers": "npm run build && node -r @letsdeel/init dist/src/main-nats.js",
    "start-consumers:dev": "docker-compose up -d && nest start --watch --inspect --debug -e 'node -r @letsdeel/init dist/src/main-nats.js HelloConsumer'",
    "lint": "eslint \"{src,types,tests,migrations,post_deployment_migrations}/**/*.ts\"",
    "test": "node --expose-gc ./node_modules/.bin/jest --forceExit --coverage --expand --logHeapUsage --detectOpenHandles",
    "test:integration": "npm run test -- --selectProjects integration",
    "test:unit": "npm run test -- --selectProjects unit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "migrations": "node -r dotenv/config ./node_modules/.bin/migration ./dist/migrations",
    "migrations:create": "cp migrations/dummy.ts migrations/`date '+%Y%m%d%H%M%S-dummy.ts'`",
    "post_deployment_migrations:create": "cp post_deployment_migrations/dummy.ts post_deployment_migrations/`date '+%Y%m%d%H%M%S_'`${npm_config_name:=dummy}.ts",
    "post_deployment_migrations": "node -r dotenv/config ./node_modules/.bin/migration ./dist/post_deployment_migrations POST_DEPLOYMENT",
    "prepare": "husky"
  },
  "dependencies": {
    "@deel-core/sequelize-flavours": "^0.3.16",
    "@letsdeel/init": "1.31.0",
    "@letsdeel/migration": "1.13.0",
    "@letsdeel/nats-lib": "1.21.0",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.9",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/sequelize": "^10.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.3",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.9",
    "@tsconfig/node20": "^20.1.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
